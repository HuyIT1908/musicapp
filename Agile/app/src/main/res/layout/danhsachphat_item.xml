<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgDanhsachphat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/itunes"></ImageView>

        <TextView
            android:id="@+id/tv_tenDanhSachPhat"
            android:layout_width="171dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/imgDanhsachphat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Rock"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/img_deleteDanhSachPhat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete"></ImageView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>